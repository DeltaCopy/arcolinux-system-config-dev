[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Package
Target = linux*
Target = systemd*
Target = nvidia*

[Action]
Description = Important Linux packages have changed. Reboot is recommended.
When = PostTransaction
Exec = /usr/bin/notify-send -u critical -i software-update-urgent "ArcoLinux message" "Important Linux packages have changed.\nReboot is recommended."
