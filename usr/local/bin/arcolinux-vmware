result=$(systemd-detect-virt)

if [ $result = "vmware" ];
	then
		#activate vmware
		if pacman -Qi open-vm-tools &> /dev/null; then
			sudo systemctl enable vmtoolsd.service
			sudo systemctl start vmtoolsd.service
		fi
fi
