# Website   : https://www.arcolinuxb.com
# Website   : https://www.arcolinuxiso.com
# Website   : https://www.arcolinuxforum.com
##################################################################################################################
#
#   DO NOT JUST RUN THIS. EXAMINE AND JUDGE. RUN AT YOUR OWN RISK.
#
##################################################################################################################
#tput setaf 0 = black 
#tput setaf 1 = red 
#tput setaf 2 = green
#tput setaf 3 = yellow 
#tput setaf 4 = dark blue 
#tput setaf 5 = purple
#tput setaf 6 = cyan 
#tput setaf 7 = gray 
#tput setaf 8 = light blue
##################################################################################################################

tput setaf 3;
echo
echo "PACMAN HOOKS FOR BOOTLOADERS GOT THEIR OWN PACKAGE:"
echo
echo "If you are on Grub we use"
echo "arcolinux-bootloader-grub-git"
echo
echo "If you are on Systemd-boot we use"
echo "arcolinux-bootloader-systemd-boot-git"
echo
tput setaf 2;
echo
echo "ATTEMPTING AUTOMATIC INSTALLATION:"
echo
bootloader=$(bootctl status | grep "Product" | awk '{print $2}')
if [ "$bootloader" = "systemd-boot" ]; then
    echo "The bootloader is systemd-boot."
    echo "We will install this package for you now"
    echo
    alacritty -e sh -c 'pacman -S arcolinux-bootloader-systemd-boot-git --noconfirm; read -p "Press enter to continue..."'

    echo
    echo "It contains all the pacman hooks it needs."
    echo
elif [ "$bootloader" = "GRUB" ]; then
    echo "The bootloader is GRUB."
    echo "We will install this package for you now"
    echo
    alacritty -e sh -c 'pacman -S arcolinux-bootloader-grub-git --noconfirm; read -p "Press enter to continue..."'

    echo
    echo "It contains all the pacman hooks it needs."
    echo
else
    tput setaf 1;
    echo "The bootloader is not recognized."
    echo "Type 'boot' in a terminal to know if you are on grub or systemd-boot"
    tput sgr0
fi
tput sgr0

echo
echo "###############################################################################"
echo "###                DONE - YOU CAN CLOSE THIS WINDOW                        ####"
echo "###############################################################################"
