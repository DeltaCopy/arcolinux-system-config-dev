#tput setaf 0 = black 
#tput setaf 1 = red 
#tput setaf 2 = green
#tput setaf 3 = yellow 
#tput setaf 4 = dark blue 
#tput setaf 5 = purple
#tput setaf 6 = cyan 
#tput setaf 7 = gray 
#tput setaf 8 = light blue
##################################################################################################################

if [ -f /usr/local/bin/get-nemesis-on-carli ]; then
echo "Changing logo to Arch"
echo
echo '
DISTRIB_ID="Arch"
DISTRIB_RELEASE="rolling"
DISTRIB_DESCRIPTION="Arch Linux" ' | sudo tee /etc/lsb-release
fi

if [ -f /usr/local/bin/get-nemesis-on-aa ]; then
echo "Changing logo to Arch"
echo
echo '
DISTRIB_ID="Arch"
DISTRIB_RELEASE="rolling"
DISTRIB_DESCRIPTION="Arch Linux" ' | sudo tee /etc/lsb-release
fi

if [ -f /usr/local/bin/get-nemesis-on-alci ]; then
echo "Changing logo to Arch"
echo
echo '
DISTRIB_ID="Arch"
DISTRIB_RELEASE="rolling"
DISTRIB_DESCRIPTION="Arch Linux" ' | sudo tee /etc/lsb-release
fi

if [ -f /usr/local/bin/get-nemesis-on-arcolinux ]; then
echo "Changing logo to ArcoLinux"
echo
echo '
DISTRIB_ID=ArcoLinux
DISTRIB_RELEASE="rolling"
DISTRIB_DESCRIPTION="ArcoLinux" ' | sudo tee /etc/lsb-release
fi

if  grep -q ArcoLinux /etc/dev-rel ; then
echo "Changing logo to ArcoLinux"
echo
echo '
DISTRIB_ID=ArcoLinux
DISTRIB_RELEASE="rolling"
DISTRIB_DESCRIPTION="ArcoLinux" ' | sudo tee /etc/lsb-release
fi